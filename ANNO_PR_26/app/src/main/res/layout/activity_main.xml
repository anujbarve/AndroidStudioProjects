<?xml version="1.0" encoding="utf-8"?>
<LinearLayout


    android:orientation="vertical"
    android:background="#01315a"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/LinearLayout1"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:android="http://schemas.android.com/apk/res/android">


    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/roll_no"
        android:inputType="number"
        android:hint="Enter Roll No."
        android:ems="10">
    </EditText>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/name"
        android:hint="Enter Your Name"
        android:ems="10"/>

    <EditText
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/marks" android:inputType="number"
        android:hint="Enter Marks" android:ems="10"/>


    -<LinearLayout android:layout_height="98dp" android:layout_width="match_parent">

    <Button android:layout_height="90dp" android:layout_width="140dp" android:id="@+id/addbtn" android:text="Add"/>

    <Button android:layout_height="90dp" android:layout_width="140dp" android:id="@+id/deletebtn" android:text="Delete"/>

    <Button android:layout_height="90dp" android:layout_width="140dp" android:id="@+id/viewallbtn" android:text="View all"/>
</LinearLayout>
</LinearLayout>